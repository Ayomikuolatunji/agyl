<!DOCTYPE html>
<html>
    <head>
        <title>Error Logs</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <style>
            body {
                padding: 20px;
            }
            .card {
                margin-bottom: 20px;
            }
            .timestamp {
                font-size: 0.8em;
                color: #6c757d;  
            }
            .error-type {
                color: #dc3545; 
            }
        </style>
    </head>
    <body>
        <h1>Error Logs</h1>
        {{#each errors}}
        <div class="card">
            <div class="card-header">
                <span class="error-type">{{this.error}}</span>
                <span class="timestamp float-right">{{this.timestamp}}</span>
            </div>
            <div class="card-body">
                <p class="card-text">{{this.details}}</p>
            </div>
        </div>
        {{/each}}
    </body>
</html>
